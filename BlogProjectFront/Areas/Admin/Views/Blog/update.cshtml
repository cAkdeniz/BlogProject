@model BlogUpdateModel

<form method="post" action="Update" class="p-3" enctype="multipart/form-data">

<input type="hidden" asp-for="@Model.Id">
    <div class="form-group">
        <label >Title</label>
        <input asp-for="@Model.Title" class="form-control">
    </div>
    <div class="form-group">
        <label >Kısa Açıklama</label>
        <textarea asp-for="@Model.ShortDescription" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label >Açıklama</label>
        <textarea asp-for="@Model.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label >Reesim</label>
        <input asp-for="@Model.Image" type="file" class="form-control-file">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info btn-sm">Kaydet</button>
    </div>
</form>