@model List<CategoryWithBlogsCountModel>

<h5 class="card-header">Kategoriler</h5>

@foreach (var category in Model)
{
  <a asp-action="GetAllByCategoryId" asp-route-categoryId="@category.CategoryId" asp-controller="Home" 
  class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
    @category.CategoryName
    <span class="badge badge-primary badge-pill">@category.BlogsCount</span>
  </a>
}