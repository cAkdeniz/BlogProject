@model AppUserLoginModel

@{
    Layout=null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <link rel="stylesheet" href="/css/simplex.css">
</head>
<body>
    <form class="w-50 mt-4 mx-auto p-3 shadow" method="POST" asp-action="SignIn">
        <div class="row">
        <div class="text-center text-dark font-weight-bold col-md-12">
            <h3>Giriş Yap</h3>
        </div>
    </div>
    <div class="form-group">
        <label>Kullanıcı Adı: </label>
        <input asp-for="@Model.UserName" class="form-control">
    </div>
    <div class="form-group">
        <label>Şifre: </label>
        <input asp-for="@Model.Password" type="password" class="form-control">
    </div> 
    <div class="form-group">
        <button type="submit" class="btn btn-info btn-block">Giriş Yap</button>
    </div>   
    </form>
</body>
</html>