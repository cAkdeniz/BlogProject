@model List<BlogListModel>

@if(!string.IsNullOrWhiteSpace(ViewBag.SearchString))
{
  <div class="border border-dark p-3 mb-2">
    <Search s="@ViewBag.SearchString"></Search>
    <a class='float-right' asp-action='Index' asp-controller='Home'>Filtreyi KaldÄ±r</a>
  </div>
}

@foreach (var blog in Model)
{
  <div class="card mb-4">
    <getblogimage id="@blog.Id"></getblogimage>
    <div class="card-body">
      <h2 class="card-title">@blog.Title</h2>
      <p class="card-text">@blog.ShortDescription</p>
      <a asp-controller="Home" asp-action="BlogDetail" asp-route-id="@blog.Id" class="btn btn-primary">Read More &rarr;</a>
    </div>
    <div class="card-footer text-muted">
      Posted on @blog.PostedTime.ToLongDateString()
    </div>

  </div>
}
